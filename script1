while true; do
        echo -n "Enter a mountpoint for ISO "| tee -a text.txt
        read path; echo Read is done with satatus code $?| tee -a text.txt
        if [ -d /$path]
                then
                echo 'This folder is exists. You must to repeat.'
                continue
        else
                mkdir  /$path; echo Create a dir /$path is done with status code $?| tee -a text.txt
                break
      
        fi
done
