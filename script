!#/bin/bash
#echo 'Task1 is going'

#sed -i 's/ONBOOT=no/ONBOOT=yes/' /etc/sysconfig/network-scripts/ifcfg-enp0s3
#service network restart

#echo 'Task1 is done'



echo 'Task2 is going '

for var in INPUT OUTPUT
do
iptables -A $var -p tcp --dport 22 -j ACCEPT; echo Command for added iptables $var is done with status code $?
done

sed -i 's/#PermitRootLogin yes/PermitRootlogin no/' /etc/ssh/sshd_config; echo Added a permit root login is done with status code $?
systemctl restart sshd; echo Restart sshd is done with status code $?

echo 'Task2 is done'



echo 'Task3 is going'

echo -n "Enter a mountpoint for ISO "
read path
mkdir -p /$path

mount /CentOS-7-x86_64-DVD-2009.iso /$path; echo Mount for ISO is done with status code $?

yum --desablerepo=\* version &> /dev/null


echo  '[LocalRepo]' >  /etc/yum.repos.d/local.repo; echo Write data to local.repo is done with status code $?
echo  'name=LocalRepository' >> /etc/yum.repos.d/local.repo; echo Write data to local.repo is done with status code $?
echo  'baseurl=file:///'$path >> /etc/yum.repos.d/local.repo; echo Write data to local.repo is done with status code $?
echo  'enabled=1' >> /etc/yum.repos.d/local.repo; echo Write data to local.repo is done with status code $?
echo  'gpgcheck=0' >> /etc/yum.repos.d/local.repo; echo Write data to local.repo is done with status code $?
echo  'gpgkey=file::///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-7' >>  /etc/yum.repos.d/local.repo; echo Write data to local.repo is done with status code $?

echo 'Task3 is done'
echo 'Task4 is going'

echo 'Start state of disks' && lsblk


echo 'Task4 is done'


echo 'Task5 is going'

pvcreate /dev/md5 && vgcreate vlgrp1 /dev/md5 && lvcreate -l +100%FREE -n lv  vlgrp1; echo Creating a LVM is done with status code $?

echo 'Task5 is done'


echo 'Task6 is going'

mkfs -t xfs /dev/vlgrp1/lv; echo Creating a xfs is done with status code $?

echo 'Task6 is done'


echo 'Task7 is going'

echo -n "Enter a mountpoint for volume "
read path_volume
mkdir -p /$path_volume

mount /dev/vlgrp1/lv /$path_volume; echo Mount volume is done with status code $?

echo 'Task7 is done'


echo 'Task8 is going'
yum install nfs-utils

systemctl start rpcbind
systemctl enable rpcbind
systemctl start nfs-server
systemctl enable nfs-server
systemctl start rpc-statd
systemctl start nfs-idmapd

echo -n "Enter a dir for nfs "
read path_nfs
mkdir -p /$path_nfs

echo -n "Enter a mountpoint for nfs "
read path_mpnfs

chmod 777 /$path_nfs

echo /$path_nfs' *(rw,sync,no_root_squash)' >> /etc/exports
exportfs -r

mount -t nfs 192.168.57.5:/$path_nfs /$path_mpnfs; echo Mount nfs is done with status code $?
echo 'Task8 is done'

